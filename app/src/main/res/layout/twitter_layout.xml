<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:id="@+id/es_child_main"
    android:layout_marginLeft="10dp"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/sub_row_layout"
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTweets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:focusable="false"
            android:clickable="false"
            android:layout_marginTop="8dp"
            android:textColor="#0000FF"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/txttname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTweets"
            android:textSize="15dp"
            android:focusable="false"
            android:clickable="false"
            android:textColor="#7FFFD4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/txtretweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:focusable="false"
            android:clickable="false"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/txttCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:focusable="false"
            android:clickable="false"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:layout_marginRight="25dp"
            android:layout_below="@+id/txtretweet"
            />
    </RelativeLayout>

</RelativeLayout>